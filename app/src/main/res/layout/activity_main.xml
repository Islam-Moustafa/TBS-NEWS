<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for a list of News -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/tbsnews"
        android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/tNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tech News"
                android:background="@drawable/rectangle_tech"
                android:textColor="#ffffff"
                android:layout_marginBottom="48dp"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:gravity="center"/>
            <Button
                android:id="@+id/bNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business News"
                android:background="@drawable/rectangle_business"
                android:textColor="#ffffff"
                android:layout_marginBottom="48dp"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:gravity="center"/>
            <Button
                android:id="@+id/sNews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Science News"
                android:background="@drawable/rectangle_science"
                android:textColor="#ffffff"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:gravity="center"/>
        </LinearLayout>

</LinearLayout>
