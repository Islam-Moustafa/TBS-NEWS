<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.company.app.tbsnews">

    <!-- this permission to connect the internet -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- we declare this permission to check state connectivity of internet -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="TBS NEWS"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name="com.company.app.tbsnews.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.company.app.tbsnews.NewsActivity"></activity>
    </application>

</manifest>